        // বর্তমান ভাষা ট্র্যাক করার জন্য ভেরিয়েবল
        let currentLang = 'bn'; 

        function updateContent(lang) {
            const currentContent = content[lang];
            
            // প্রধান শিরোনামগুলি আপডেট করা
            document.getElementById('mainTitle').textContent = currentContent.mainTitle;
            document.getElementById('subtitle').textContent = currentContent.subtitle;
            document.getElementById('pageTitleHeader').textContent = currentContent.headerTitle;
            document.getElementById('langButton').textContent = currentContent.button;

            // কার্ডের কন্টেন্ট আপডেট করা
            currentContent.card.forEach((item, index) => {
                const titleElement = document.getElementById(`cardTitle${index + 1}`);
                const textElement = document.getElementById(`cardText${index + 1}`);
                
                if (titleElement) titleElement.textContent = item.title;
                if (textElement) {
                    // HTML কনটেন্ট সাপোর্ট করার জন্য innerHTML ব্যবহার করা হচ্ছে (যেমন: **18 বছর**)
                    textElement.innerHTML = item.text; 
                }
            });
            
            // HTML lang অ্যাট্রিবিউট আপডেট করা
            document.documentElement.lang = lang;
        }

        function toggleLanguage() {
            currentLang = currentLang === 'bn' ? 'en' : 'bn';
            updateContent(currentLang);
        }

        // পেজ লোড হওয়ার সময় ডিফল্ট ভাষা সেট করা
        window.onload = function() {
            updateContent(currentLang);
        };
    </script>
